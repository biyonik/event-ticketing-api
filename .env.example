# Application
APP_NAME=Event-Ticketing-API
APP_ENV=development
PORT=8000

# Database
DB_DSN=root:password@tcp(localhost:3306)/event_ticketing_api?parseTime=true&multiStatements=true

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRATION=3600
JWT_REFRESH_EXPIRATION=604800

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Cache
CACHE_DRIVER=redis
CACHE_PREFIX=event_api:
CACHE_FILE_DIR=storage/cache

# Queue
QUEUE_DRIVER=redis
QUEUE_DEFAULT=default

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60

# SMTP
MAIL_DRIVER=smtp
MAIL_HOST=localhost
MAIL_PORT=1025
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_FROM_ADDRESS=tickets@event-api.local
MAIL_FROM_NAME=Event Ticketing

# Storage (QR codes, tickets)
STORAGE_DRIVER=local
STORAGE_LOCAL_PATH=storage/tickets
STORAGE_BASE_URL=http://localhost:8000/storage

# QR Code
QR_CODE_SIZE=256
QR_CODE_LEVEL=high

# Pricing
DYNAMIC_PRICING_ENABLED=true
EARLY_BIRD_DISCOUNT=20
VIP_MULTIPLIER=3.0
